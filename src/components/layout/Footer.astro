---

<footer class="bg-gray-50 border-t border-gray-200">
  <div class="container max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 lg:py-16">
    <!-- Main Footer Content -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-6 gap-8 lg:gap-4">
      <!-- Company Info -->
      <div class="lg:col-span-2">
        <div class="flex items-center space-x-2 mb-4">
          <div class="w-8 h-8 bg-gradient-to-br from-harper-purple-600 to-harper-blue-600 rounded-lg flex items-center justify-center">
            <span class="text-white font-bold text-lg">H</span>
          </div>
          <span class="font-display font-semibold text-xl text-gray-900">Harper AI</span>
        </div>
        <p class="text-gray-600 mb-6 max-w-sm">
          Transform your customer relationships with AI-powered revenue intelligence. Built for modern sales teams.
        </p>
        
        <!-- Newsletter Signup -->
        <div class="mb-6">
          <h3 class="font-semibold text-gray-900 mb-3">Stay updated</h3>
          <form class="flex flex-col sm:flex-row gap-2">
            <input
              type="email"
              placeholder="Enter your email"
              class="flex-1 px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-harper-purple-600 focus:border-transparent"
              required
            />
            <button
              type="submit"
              class="px-4 py-2 bg-gradient-to-r from-harper-purple-600 to-harper-blue-600 text-white rounded-lg font-medium hover:shadow-lg transition-all duration-200"
            >
              Subscribe
            </button>
          </form>
        </div>
        
        <!-- Social Links -->
        <div class="flex space-x-4">
          {socialLinks.map((social) => (
            <a
              href={social.href}
              class="text-gray-500 hover:text-gray-700 transition-colors duration-200"
              aria-label={social.name}
              target="_blank"
              rel="noopener noreferrer"
            >
              <Fragment set:html={social.icon} />
            </a>
          ))}
        </div>
      </div>
      
      <!-- Footer Links -->
      {footerSections.map((section) => (
        <div>
          <h3 class="font-semibold text-gray-900 mb-4">{section.title}</h3>
          <ul class="space-y-2">
            {section.links.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-gray-600 hover:text-gray-900 transition-colors duration-200"
                >
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
    
    <!-- Bottom Bar -->
    <div class="mt-12 pt-8 border-t border-gray-200">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <div class="text-gray-600 text-sm">
          Â© {currentYear} Harper AI. All rights reserved.
        </div>
        
        <!-- Compliance Badges -->
        <div class="flex items-center space-x-6">
          <span class="text-gray-600 text-sm flex items-center">
            <svg class="w-4 h-4 mr-1 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
            </svg>
            SOC 2 Type II
          </span>
          <span class="text-gray-600 text-sm flex items-center">
            <svg class="w-4 h-4 mr-1 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
            </svg>
            GDPR Compliant
          </span>
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  /* Newsletter input focus state */
  input[type="email"]:focus {
    box-shadow: 0 0 0 3px rgba(132, 61, 255, 0.1);
  }
  
  /* Social icon hover effect */
  a[aria-label] svg {
    transition: transform 0.2s ease;
  }
  
  a[aria-label]:hover svg {
    transform: translateY(-2px);
  }
</style>