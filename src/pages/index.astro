---
import PageLayout from '../layouts/PageLayout.astro';

const customerLogos = [
  { name: 'Salesforce', src: '/logos/salesforce.svg' },
  { name: 'HubSpot', src: '/logos/hubspot.svg' },
  { name: 'Stripe', src: '/logos/stripe.svg' },
  { name: 'Shopify', src: '/logos/shopify.svg' },
  { name: 'Slack', src: '/logos/slack.svg' },
];

const features = [
  {
    title: 'AI-Powered CRM Updates',
    description: 'Automatically capture and update customer interactions across all channels.',
    icon: 'ðŸ¤–',
    gradient: 'from-harper-purple-600 to-harper-purple-500',
  },
  {
    title: 'Deal Intelligence',
    description: 'Predict deal outcomes with 95% accuracy using advanced AI models.',
    icon: 'ðŸ“Š',
    gradient: 'from-harper-blue-600 to-harper-blue-500',
  },
  {
    title: 'Revenue Forecasting',
    description: 'Get accurate revenue predictions based on historical data and current pipeline.',
    icon: 'ðŸ“ˆ',
    gradient: 'from-harper-teal-600 to-harper-teal-500',
  },
  {
    title: 'Team Coaching',
    description: 'AI-powered insights to help your team close more deals faster.',
    icon: 'ðŸŽ¯',
    gradient: 'from-harper-purple-600 to-harper-blue-600',
  },
];

const testimonials = [
  {
    quote: "Harper AI transformed how we manage customer relationships. Our sales team saves 10+ hours per week on CRM updates.",
    author: "Sarah Chen",
    role: "VP of Sales",
    company: "TechCorp",
    avatar: "/avatars/sarah.jpg",
  },
  {
    quote: "The predictive analytics are incredible. We've increased our forecast accuracy by 40% in just 3 months.",
    author: "Michael Rodriguez",
    role: "Revenue Operations",
    company: "GrowthCo",
    avatar: "/avatars/michael.jpg",
  },
  {
    quote: "Best investment we've made. Our close rate improved by 25% with Harper AI's deal intelligence.",
    author: "Emily Watson",
    role: "Sales Director",
    company: "ScaleUp Inc",
    avatar: "/avatars/emily.jpg",
  },
];

const integrations = [
  'Salesforce', 'HubSpot', 'Pipedrive', 'Microsoft Dynamics',
  'Slack', 'Gmail', 'Outlook', 'Zoom',
  'Calendly', 'LinkedIn Sales Navigator', 'Gong', 'Outreach',
];
---

<PageLayout title="AI-Powered Revenue Intelligence Platform">
  <!-- Hero Section -->
  <section class="relative overflow-hidden bg-gradient-to-b from-gray-50 to-white pt-16 pb-20 lg:pt-24 lg:pb-28">
    <div class="container max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-4xl mx-auto">
        <!-- Badge -->
        <div class="inline-flex items-center px-4 py-2 bg-harper-purple-100 text-harper-purple-700 rounded-full text-sm font-medium mb-6">
          <span class="mr-2">ðŸš€</span>
          New: AI Deal Scoring now available
        </div>
        
        <!-- Headline -->
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-display font-bold text-gray-900 mb-6">
          Transform Your Revenue with
          <span class="text-gradient"> AI-Powered Intelligence</span>
        </h1>
        
        <!-- Subheadline -->
        <p class="text-xl lg:text-2xl text-gray-600 mb-10 max-w-3xl mx-auto">
          Harper AI automates CRM updates, predicts deal outcomes, and helps your sales team close more deals faster. Join 1,000+ revenue teams already using Harper.
        </p>
        
        <!-- CTAs -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href="/signup" 
            class="inline-flex items-center justify-center px-8 py-4 bg-gradient-to-r from-harper-purple-600 to-harper-blue-600 text-white rounded-lg font-semibold text-lg hover:shadow-xl hover:scale-105 transition-all duration-200"
          >
            Start Free Trial
            <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </a>
          <a 
            href="/demo" 
            class="inline-flex items-center justify-center px-8 py-4 bg-white border-2 border-gray-300 text-gray-900 rounded-lg font-semibold text-lg hover:border-gray-400 hover:shadow-lg transition-all duration-200"
          >
            <svg class="mr-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            Watch Demo
          </a>
        </div>
      </div>
      
      <!-- Trust Indicators -->
      <div class="mt-16 pt-8 border-t border-gray-200">
        <p class="text-center text-gray-600 mb-6">Trusted by leading revenue teams</p>
        <div class="flex flex-wrap justify-center items-center gap-8 opacity-60 grayscale">
          {customerLogos.map((logo) => (
            <img 
              src={logo.src} 
              alt={logo.name} 
              class="h-8 lg:h-10"
            />
          ))}
        </div>
      </div>
    </div>
    
    <!-- Background decoration -->
    <div class="absolute top-0 right-0 -translate-y-1/2 translate-x-1/2 w-96 h-96 bg-harper-purple-200 rounded-full blur-3xl opacity-20"></div>
    <div class="absolute bottom-0 left-0 translate-y-1/2 -translate-x-1/2 w-96 h-96 bg-harper-blue-200 rounded-full blur-3xl opacity-20"></div>
  </section>
  
  <!-- Problem/Solution Section -->
  <section class="py-20 lg:py-28 bg-white">
    <div class="container max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
        <div>
          <h2 class="text-3xl lg:text-4xl font-display font-bold text-gray-900 mb-6">
            Stop wasting time on manual CRM updates
          </h2>
          <div class="space-y-4">
            <div class="flex items-start">
              <div class="flex-shrink-0 w-6 h-6 rounded-full bg-red-100 text-red-600 flex items-center justify-center mt-1">
                <span class="text-sm">âœ•</span>
              </div>
              <p class="ml-3 text-gray-600">Sales reps spend 5+ hours/week on data entry</p>
            </div>
            <div class="flex items-start">
              <div class="flex-shrink-0 w-6 h-6 rounded-full bg-red-100 text-red-600 flex items-center justify-center mt-1">
                <span class="text-sm">âœ•</span>
              </div>
              <p class="ml-3 text-gray-600">60% of CRM data is outdated or incomplete</p>
            </div>
            <div class="flex items-start">
              <div class="flex-shrink-0 w-6 h-6 rounded-full bg-red-100 text-red-600 flex items-center justify-center mt-1">
                <span class="text-sm">âœ•</span>
              </div>
              <p class="ml-3 text-gray-600">Inaccurate forecasts lead to missed targets</p>
            </div>
          </div>
          
          <div class="mt-8 p-6 bg-gradient-to-r from-harper-purple-50 to-harper-blue-50 rounded-xl">
            <h3 class="font-semibold text-gray-900 mb-3">With Harper AI:</h3>
            <div class="space-y-3">
              <div class="flex items-start">
                <div class="flex-shrink-0 w-6 h-6 rounded-full bg-green-100 text-green-600 flex items-center justify-center mt-0.5">
                  <span class="text-sm">âœ“</span>
                </div>
                <p class="ml-3 text-gray-700">Automatic CRM updates from all interactions</p>
              </div>
              <div class="flex items-start">
                <div class="flex-shrink-0 w-6 h-6 rounded-full bg-green-100 text-green-600 flex items-center justify-center mt-0.5">
                  <span class="text-sm">âœ“</span>
                </div>
                <p class="ml-3 text-gray-700">Real-time deal insights and recommendations</p>
              </div>
              <div class="flex items-start">
                <div class="flex-shrink-0 w-6 h-6 rounded-full bg-green-100 text-green-600 flex items-center justify-center mt-0.5">
                  <span class="text-sm">âœ“</span>
                </div>
                <p class="ml-3 text-gray-700">95% accurate revenue forecasting</p>
              </div>
            </div>
          </div>
        </div>
        
        <div class="relative">
          <div class="aspect-video bg-gradient-to-br from-harper-purple-100 to-harper-blue-100 rounded-2xl shadow-2xl overflow-hidden">
            <img 
              src="/demo-preview.png" 
              alt="Harper AI Dashboard Preview" 
              class="w-full h-full object-cover"
            />
            <div class="absolute inset-0 flex items-center justify-center">
              <button class="w-20 h-20 bg-white/90 rounded-full flex items-center justify-center hover:bg-white transition-colors duration-200 shadow-lg">
                <svg class="w-8 h-8 text-harper-purple-600 ml-1" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M8 5v14l11-7z"></path>
                </svg>
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Key Features Bento Grid -->
  <section class="py-20 lg:py-28 bg-gray-50">
    <div class="container max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h2 class="text-3xl lg:text-4xl font-display font-bold text-gray-900 mb-4">
          Everything you need to accelerate revenue
        </h2>
        <p class="text-xl text-gray-600">
          Harper AI brings together all the tools your revenue team needs in one intelligent platform.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <!-- Large feature card -->
        <div class="md:col-span-2 lg:col-span-2 bg-white rounded-2xl p-8 shadow-sm hover:shadow-xl transition-shadow duration-300">
          <div class={`inline-flex items-center justify-center w-12 h-12 rounded-lg bg-gradient-to-br ${features[0].gradient} text-white text-2xl mb-4`}>
            {features[0].icon}
          </div>
          <h3 class="text-2xl font-semibold text-gray-900 mb-3">{features[0].title}</h3>
          <p class="text-gray-600 mb-4">{features[0].description}</p>
          <div class="aspect-video bg-gray-100 rounded-lg"></div>
        </div>
        
        <!-- Regular feature cards -->
        {features.slice(1).map((feature) => (
          <div class="bg-white rounded-2xl p-6 shadow-sm hover:shadow-xl transition-shadow duration-300">
            <div class={`inline-flex items-center justify-center w-12 h-12 rounded-lg bg-gradient-to-br ${feature.gradient} text-white text-2xl mb-4`}>
              {feature.icon}
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">{feature.title}</h3>
            <p class="text-gray-600">{feature.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <!-- Customer Testimonials -->
  <section class="py-20 lg:py-28 bg-white">
    <div class="container max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h2 class="text-3xl lg:text-4xl font-display font-bold text-gray-900 mb-4">
          Loved by revenue teams everywhere
        </h2>
        <p class="text-xl text-gray-600">
          See what our customers have to say about Harper AI.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {testimonials.map((testimonial) => (
          <div class="bg-gray-50 rounded-2xl p-8 hover:shadow-lg transition-shadow duration-300">
            <div class="flex mb-4">
              {[...Array(5)].map((_, i) => (
                <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                </svg>
              ))}
            </div>
            <p class="text-gray-700 mb-6 italic">"{testimonial.quote}"</p>
            <div class="flex items-center">
              <div class="w-12 h-12 bg-gradient-to-br from-harper-purple-600 to-harper-blue-600 rounded-full flex items-center justify-center text-white font-semibold">
                {testimonial.author.split(' ').map(n => n[0]).join('')}
              </div>
              <div class="ml-3">
                <p class="font-semibold text-gray-900">{testimonial.author}</p>
                <p class="text-sm text-gray-600">{testimonial.role}, {testimonial.company}</p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <!-- Integration Showcase -->
  <section class="py-20 lg:py-28 bg-gray-50">
    <div class="container max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h2 class="text-3xl lg:text-4xl font-display font-bold text-gray-900 mb-4">
          Integrates with your entire tech stack
        </h2>
        <p class="text-xl text-gray-600">
          Harper AI seamlessly connects with the tools you already use and love.
        </p>
      </div>
      
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
        {integrations.map((integration) => (
          <div class="bg-white rounded-xl p-6 flex items-center justify-center hover:shadow-lg transition-shadow duration-300">
            <span class="text-gray-700 font-medium">{integration}</span>
          </div>
        ))}
      </div>
      
      <div class="text-center mt-10">
        <a 
          href="/integrations" 
          class="inline-flex items-center text-harper-purple-600 hover:text-harper-purple-700 font-semibold"
        >
          View all integrations
          <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>
  
  <!-- ROI Calculator -->
  <section class="py-20 lg:py-28 bg-white">
    <div class="container max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="bg-gradient-to-r from-harper-purple-600 to-harper-blue-600 rounded-3xl p-12 lg:p-16 text-white text-center">
        <h2 class="text-3xl lg:text-4xl font-display font-bold mb-4">
          Calculate your ROI with Harper AI
        </h2>
        <p class="text-xl mb-8 max-w-3xl mx-auto opacity-90">
          See how much time and money your team could save with Harper AI's revenue intelligence platform.
        </p>
        <a 
          href="/roi-calculator" 
          class="inline-flex items-center justify-center px-8 py-4 bg-white text-harper-purple-600 rounded-lg font-semibold text-lg hover:shadow-xl transition-all duration-200"
        >
          Calculate ROI
          <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>
  
  <!-- Final CTA -->
  <section class="py-20 lg:py-28 bg-gray-50">
    <div class="container max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl lg:text-4xl font-display font-bold text-gray-900 mb-4">
        Ready to transform your revenue?
      </h2>
      <p class="text-xl text-gray-600 mb-8">
        Join 1,000+ revenue teams already using Harper AI to accelerate growth.
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center mb-8">
        <a 
          href="/signup" 
          class="inline-flex items-center justify-center px-8 py-4 bg-gradient-to-r from-harper-purple-600 to-harper-blue-600 text-white rounded-lg font-semibold text-lg hover:shadow-xl hover:scale-105 transition-all duration-200"
        >
          Start Free Trial
          <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
          </svg>
        </a>
        <a 
          href="/contact" 
          class="inline-flex items-center justify-center px-8 py-4 bg-white border-2 border-gray-300 text-gray-900 rounded-lg font-semibold text-lg hover:border-gray-400 hover:shadow-lg transition-all duration-200"
        >
          Talk to Sales
        </a>
      </div>
      
      <div class="flex flex-wrap justify-center gap-6 text-sm text-gray-600">
        <span class="flex items-center">
          <svg class="w-5 h-5 mr-2 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          14-day free trial
        </span>
        <span class="flex items-center">
          <svg class="w-5 h-5 mr-2 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          No credit card required
        </span>
        <span class="flex items-center">
          <svg class="w-5 h-5 mr-2 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          Cancel anytime
        </span>
      </div>
    </div>
  </section>
</PageLayout>

<style>
  /* Text gradient animation */
  @keyframes gradient {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }
  
  .text-gradient {
    background-size: 200% 200%;
    animation: gradient 3s ease infinite;
  }
  
  /* Smooth scroll for sections */
  section {
    scroll-margin-top: 80px;
  }
</style>