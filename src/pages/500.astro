---
import BaseLayout from "../layouts/BaseLayout.astro";
import Button from "../components/ui/Button.astro";
import Navigation from "../components/layout/Navigation.astro";
import Footer from "../components/layout/Footer.astro";
---

<BaseLayout 
  title="Server Error"
  description="Something went wrong on our end. We're working to fix it."
>
  <Navigation />
  
  <main class="min-h-[70vh] flex items-center justify-center px-4">
    <div class="container max-w-4xl mx-auto text-center">
      <!-- Error Code -->
      <div class="relative mb-8">
        <h1 class="text-[12rem] md:text-[16rem] font-bold text-gray-100 leading-none">
          500
        </h1>
        <div class="absolute inset-0 flex items-center justify-center">
          <div class="w-24 h-24 md:w-32 md:h-32 bg-gradient-to-br from-red-500 to-orange-500 rounded-full opacity-20 blur-3xl"></div>
        </div>
      </div>
      
      <!-- Error Message -->
      <h2 class="text-3xl md:text-4xl font-display font-bold text-gray-900 mb-4">
        Server Error
      </h2>
      <p class="text-lg text-gray-600 mb-8 max-w-2xl mx-auto">
        Something went wrong on our end. Our team has been notified and is working to fix this issue. 
        Please try again in a few moments.
      </p>
      
      <!-- Status Information -->
      <div class="bg-gray-50 border border-gray-200 rounded-xl p-6 max-w-2xl mx-auto mb-8">
        <div class="flex items-center justify-center mb-4">
          <div class="w-3 h-3 bg-orange-500 rounded-full animate-pulse"></div>
          <span class="ml-2 text-sm font-medium text-gray-700">Investigating Issue</span>
        </div>
        <p class="text-sm text-gray-600">
          Our engineering team is actively working on resolving this problem. 
          Most issues are resolved within minutes.
        </p>
      </div>
      
      <!-- What to do next -->
      <div class="mb-12">
        <h3 class="text-xl font-semibold text-gray-900 mb-6">What you can do</h3>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 max-w-3xl mx-auto">
          <div class="p-6 bg-white border border-gray-200 rounded-xl">
            <div class="w-12 h-12 bg-harper-purple-100 rounded-lg flex items-center justify-center mb-4 mx-auto">
              <svg class="w-6 h-6 text-harper-purple-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
              </svg>
            </div>
            <h4 class="font-semibold text-gray-900 mb-2">Refresh the page</h4>
            <p class="text-sm text-gray-600">
              Try refreshing your browser to see if the issue is resolved
            </p>
          </div>
          
          <div class="p-6 bg-white border border-gray-200 rounded-xl">
            <div class="w-12 h-12 bg-harper-purple-100 rounded-lg flex items-center justify-center mb-4 mx-auto">
              <svg class="w-6 h-6 text-harper-purple-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h4 class="font-semibold text-gray-900 mb-2">Wait a moment</h4>
            <p class="text-sm text-gray-600">
              Give us a few minutes to resolve the issue and try again
            </p>
          </div>
          
          <div class="p-6 bg-white border border-gray-200 rounded-xl">
            <div class="w-12 h-12 bg-harper-purple-100 rounded-lg flex items-center justify-center mb-4 mx-auto">
              <svg class="w-6 h-6 text-harper-purple-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </div>
            <h4 class="font-semibold text-gray-900 mb-2">Contact support</h4>
            <p class="text-sm text-gray-600">
              If the problem persists, reach out to our support team
            </p>
          </div>
        </div>
      </div>
      
      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button href="/" variant="primary" size="lg">
          Go to Homepage
        </Button>
        <Button href="mailto:support@harperai.com" variant="outline" size="lg">
          Contact Support
        </Button>
      </div>
      
      <!-- Error Reference -->
      <div class="mt-12 text-sm text-gray-500">
        <p>Error Reference: <code class="font-mono bg-gray-100 px-2 py-1 rounded">ERR_{new Date().getTime()}</code></p>
      </div>
      
      <!-- Decorative Elements -->
      <div class="absolute top-20 left-10 w-20 h-20 bg-red-500/10 rounded-full blur-2xl"></div>
      <div class="absolute bottom-20 right-10 w-32 h-32 bg-orange-500/10 rounded-full blur-3xl"></div>
    </div>
  </main>
  
  <Footer />
</BaseLayout>

<script>
  // Auto-refresh after 30 seconds
  let countdown = 30;
  const statusText = document.querySelector('.text-sm.font-medium.text-gray-700');
  
  const updateCountdown = () => {
    if (countdown > 0 && statusText) {
      statusText.textContent = `Investigating Issue (auto-refresh in ${countdown}s)`;
      countdown--;
      setTimeout(updateCountdown, 1000);
    } else if (countdown === 0) {
      window.location.reload();
    }
  };
  
  // Start countdown
  setTimeout(updateCountdown, 1000);
  
  // Add refresh button functionality
  document.addEventListener('DOMContentLoaded', () => {
    const refreshButton = document.createElement('button');
    refreshButton.textContent = 'Refresh Now';
    refreshButton.className = 'mt-4 text-sm text-harper-purple-600 hover:text-harper-purple-700 font-medium transition-colors duration-200';
    refreshButton.onclick = () => window.location.reload();
    
    const statusDiv = document.querySelector('.bg-gray-50.border');
    statusDiv?.appendChild(refreshButton);
  });
</script>

<style>
  /* Animate the status indicator */
  @keyframes pulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.5;
    }
  }
  
  .animate-pulse {
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }
  
  /* Error code animation */
  h1 {
    opacity: 0;
    transform: scale(0.8);
    animation: fadeInScale 0.6s ease-out forwards;
  }
  
  @keyframes fadeInScale {
    to {
      opacity: 1;
      transform: scale(1);
    }
  }
  
  /* Floating animation for decorative elements */
  @keyframes float {
    0%, 100% {
      transform: translateY(0) scale(1);
    }
    50% {
      transform: translateY(-20px) scale(1.1);
    }
  }
  
  .absolute.top-20 {
    animation: float 6s ease-in-out infinite;
  }
  
  .absolute.bottom-20 {
    animation: float 8s ease-in-out infinite;
    animation-delay: 1s;
  }
</style>