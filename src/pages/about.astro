  <!-- Awards & Recognition -->
  <section class="py-20">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-display-md font-display font-bold text-harper-gray-900 mb-4">
          Awards & Recognition
        </h2>
      </div>

      <div class="grid grid-cols-2 lg:grid-cols-4 gap-6 max-w-4xl mx-auto">
        {awards.map((award) => (
          <Card class="text-center">
            <div class="p-6">
              <div class="text-4xl mb-3">{award.icon}</div>
              <h3 class="font-semibold text-harper-gray-900 mb-1">
                {award.title}
              </h3>
              <p class="text-sm text-harper-gray-600">
                {award.org}
              </p>
            </div>
          </Card>
        ))}
      </div>
    </div>
  </section>

  <!-- Trust & Security -->
  <section class="py-20 bg-harper-gray-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-display-md font-display font-bold text-harper-gray-900 mb-4">
          Enterprise-Grade Security
        </h2>
        <p class="text-xl text-harper-gray-600 max-w-2xl mx-auto">
          Your data security is our top priority. We maintain the highest standards of compliance and protection.
        </p>
      </div>

      <div class="grid grid-cols-2 lg:grid-cols-4 gap-6 max-w-4xl mx-auto mb-12">
        {security.map((cert) => (
          <Card class="text-center">
            <div class="p-6">
              <div class="text-4xl mb-3">{cert.icon}</div>
              <h3 class="font-semibold text-harper-gray-900">
                {cert.name}
              </h3>
            </div>
          </Card>
        ))}
      </div>

      <div class="max-w-3xl mx-auto text-center">
        <p class="text-harper-gray-600 mb-6">
          Harper AI is built with security at its core. We use bank-level encryption, 
          regular security audits, and strict access controls to ensure your data remains safe.
        </p>
        <Button href="/security" variant="outline">
          Learn More About Security
        </Button>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-gradient-to-br from-harper-purple-600 to-harper-blue-600">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-display-md font-display font-bold text-white mb-6">
        Ready to Transform Your Sales Development?
      </h2>
      <p class="text-xl text-white/90 mb-8 max-w-2xl mx-auto">
        Join hundreds of companies already using Harper AI to scale their sales
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button href="/demo" variant="secondary" size="lg">
          Book a Demo
        </Button>
        <Button href="/trial" variant="outline" size="lg" class="!text-white !border-white hover:!bg-white/10">
          Start Free Trial
        </Button>
      </div>
    </div>
  </section>
</PageLayout>