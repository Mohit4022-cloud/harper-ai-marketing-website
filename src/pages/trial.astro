---
import BaseLayout from '../layouts/BaseLayout.astro';
import Button from '../components/ui/Button.astro';
import Card from '../components/ui/Card.astro';
import Badge from '../components/ui/Badge.astro';
import Input from '../components/ui/Input.astro';
import Select from '../components/ui/Select.astro';

const trialBenefits = [
  {
    icon: 'üí≥',
    title: 'No Credit Card Required',
    description: 'Start your trial instantly without any payment information'
  },
  {
    icon: '‚ö°',
    title: 'Full Access',
    description: 'Get access to all Professional plan features during your trial'
  },
  {
    icon: 'üéØ',
    title: '14 Days Free',
    description: 'Plenty of time to test Harper AI with your real lead data'
  },
  {
    icon: 'ü§ù',
    title: 'Onboarding Support',
    description: 'Get help from our team to ensure a successful trial'
  }
];

const setupSteps = [
  {
    step: '1',
    title: 'Create Account',
    description: 'Sign up in 60 seconds',
    time: '1 min'
  },
  {
    step: '2',
    title: 'Connect Data',
    description: 'Link your CRM and tools',
    time: '5 mins'
  },
  {
    step: '3',
    title: 'Configure AI',
    description: 'Set up lead scoring rules',
    time: '10 mins'
  },
  {
    step: '4',
    title: 'Start Converting',
    description: 'Watch leads flow in',
    time: 'Instant'
  }
];

const industries = [
  { value: 'saas', label: 'SaaS / Software' },
  { value: 'ecommerce', label: 'E-commerce' },
  { value: 'finance', label: 'Finance / Banking' },
  { value: 'healthcare', label: 'Healthcare' },
  { value: 'education', label: 'Education' },
  { value: 'realestate', label: 'Real Estate' },
  { value: 'marketing', label: 'Marketing Agency' },
  { value: 'other', label: 'Other' }
];

const roles = [
  { value: 'founder', label: 'Founder / CEO' },
  { value: 'sales', label: 'Sales Leader' },
  { value: 'marketing', label: 'Marketing Leader' },
  { value: 'operations', label: 'Operations' },
  { value: 'developer', label: 'Developer' },
  { value: 'other', label: 'Other' }
];
---

<BaseLayout title="Start Free Trial - Harper AI">
  <!-- Hero Section -->
  <section class="relative overflow-hidden py-20 lg:py-32">
    <div class="absolute inset-0 bg-gradient-to-br from-harper-purple-50 via-transparent to-harper-blue-50 dark:from-harper-purple-950/20 dark:to-harper-blue-950/20" />
    
    <div class="container relative">
      <div class="mx-auto max-w-3xl text-center">
        <Badge variant="success" class="mb-4">14-Day Free Trial</Badge>
        <h1 class="text-display-lg font-display font-bold tracking-tight mb-6">
          Start Your Free Trial Today
        </h1>
        <p class="text-xl text-muted-foreground mb-8">
          Experience the power of AI-driven lead management. No credit card required.
        </p>
        
        <!-- Trust Indicators -->
        <div class="flex flex-wrap items-center justify-center gap-6 text-sm text-muted-foreground">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
            SOC 2 Certified
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            GDPR Compliant
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
            </svg>
            256-bit Encryption
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <section class="section-padding">
    <div class="container">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 max-w-6xl mx-auto">
        <!-- Left Column - Form -->
        <div>
          <Card padding="lg">
            <h2 class="text-2xl font-bold mb-6">Create Your Account</h2>
            
            <form class="space-y-6">
              <Input 
                name="fullName"
                label="Full Name"
                placeholder="John Doe"
                required
              />
              
              <Input 
                type="email"
                name="email"
                label="Work Email"
                placeholder="john@company.com"
                required
              />
              
              <Input 
                type="password"
                name="password"
                label="Password"
                placeholder="Create a strong password"
                hint="Minimum 8 characters"
                required
              />
              
              <Input 
                name="company"
                label="Company Name"
                placeholder="Acme Inc."
                required
              />
              
              <Select
                name="industry"
                label="Industry"
                options={industries}
                required
              />
              
              <Select
                name="role"
                label="Your Role"
                options={roles}
                required
              />
              
              <div class="space-y-3">
                <label class="flex items-start gap-3">
                  <input type="checkbox" class="mt-1" required />
                  <span class="text-sm">
                    I agree to the <a href="/terms" class="underline hover:text-primary">Terms of Service</a> and 
                    <a href="/privacy" class="underline hover:text-primary"> Privacy Policy</a>
                  </span>
                </label>
                
                <label class="flex items-start gap-3">
                  <input type="checkbox" />
                  <span class="text-sm text-muted-foreground">
                    Send me product updates and marketing communications
                  </span>
                </label>
              </div>
              
              <Button type="submit" size="lg" fullWidth>
                Start Free Trial
              </Button>
              
              <p class="text-sm text-center text-muted-foreground">
                Already have an account? 
                <a href="/login" class="underline hover:text-primary">Sign in</a>
              </p>
            </form>
          </Card>
        </div>
        
        <!-- Right Column - Benefits -->
        <div class="space-y-8">
          <!-- Benefits -->
          <div>
            <h3 class="text-xl font-semibold mb-6">Why Start a Trial?</h3>
            <div class="space-y-4">
              {trialBenefits.map((benefit) => (
                <div class="flex gap-4">
                  <div class="text-2xl">{benefit.icon}</div>
                  <div>
                    <h4 class="font-semibold mb-1">{benefit.title}</h4>
                    <p class="text-sm text-muted-foreground">{benefit.description}</p>
                  </div>
                </div>
              ))}
            </div>
          </div>
          
          <!-- Quick Setup -->
          <Card padding="lg" variant="bordered">
            <h3 class="text-lg font-semibold mb-4">Quick Setup Process</h3>
            <div class="space-y-4">
              {setupSteps.map((item, index) => (
                <div class="flex gap-4">
                  <div class="flex-shrink-0 w-8 h-8 rounded-full bg-primary text-primary-foreground flex items-center justify-center text-sm font-bold">
                    {item.step}
                  </div>
                  <div class="flex-1">
                    <div class="flex items-center justify-between">
                      <h4 class="font-medium">{item.title}</h4>
                      <span class="text-xs text-muted-foreground">{item.time}</span>
                    </div>
                    <p class="text-sm text-muted-foreground">{item.description}</p>
                  </div>
                </div>
              ))}
            </div>
          </Card>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Included -->
  <section class="section-padding bg-muted/50">
    <div class="container">
      <div class="max-w-5xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-display-sm font-display font-bold mb-4">
            Everything Included in Your Trial
          </h2>
          <p class="text-lg text-muted-foreground">
            Get full access to our Professional plan features
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {[
            'Up to 10,000 leads',
            'Advanced AI scoring',
            'All integrations',
            'Custom workflows',
            'Real-time analytics',
            'API access',
            'Priority support',
            'Training webinars',
            'Export capabilities'
          ].map((feature) => (
            <div class="flex items-center gap-3">
              <svg class="w-5 h-5 text-primary shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span>{feature}</span>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonial -->
  <section class="section-padding">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <Card padding="lg" variant="glass" class="text-center">
          <div class="max-w-3xl mx-auto">
            <div class="flex justify-center mb-6">
              {[1, 2, 3, 4, 5].map(() => (
                <svg class="w-6 h-6 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              ))}
            </div>
            
            <blockquote class="mb-6">
              <p class="text-lg mb-4">
                "The trial period gave us confidence that Harper AI was the right solution. We saw a 35% improvement in lead quality within the first week!"
              </p>
            </blockquote>
            
            <div class="flex items-center justify-center gap-4">
              <div class="w-12 h-12 rounded-full bg-muted" />
              <div class="text-left">
                <div class="font-semibold">Michael Chen</div>
                <div class="text-sm text-muted-foreground">Head of Growth, StartupCo</div>
              </div>
            </div>
          </div>
        </Card>
      </div>
    </div>
  </section>

  <!-- FAQ -->
  <section class="section-padding bg-muted/50">
    <div class="container">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-display-xs font-display font-bold text-center mb-12">
          Common Questions
        </h2>
        
        <div class="space-y-6">
          <Card padding="lg">
            <h3 class="font-semibold mb-2">Do I need a credit card to start?</h3>
            <p class="text-muted-foreground">
              No! You can start your 14-day trial without any payment information. We'll only ask for payment details if you decide to continue after the trial.
            </p>
          </Card>
          
          <Card padding="lg">
            <h3 class="font-semibold mb-2">What happens after my trial ends?</h3>
            <p class="text-muted-foreground">
              Your account will be paused, but your data will be saved for 30 days. You can upgrade to a paid plan anytime to continue using Harper AI.
            </p>
          </Card>
          
          <Card padding="lg">
            <h3 class="font-semibold mb-2">Can I extend my trial?</h3>
            <p class="text-muted-foreground">
              In some cases, we can extend trials for customers who need more time to evaluate. Contact our support team to discuss your needs.
            </p>
          </Card>
          
          <Card padding="lg">
            <h3 class="font-semibold mb-2">Is there any setup help available?</h3>
            <p class="text-muted-foreground">
              Yes! All trial users get access to our onboarding resources, documentation, and email support to ensure a successful setup.
            </p>
          </Card>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="section-padding">
    <div class="container">
      <div class="text-center max-w-3xl mx-auto">
        <h2 class="text-display-sm font-display font-bold mb-6">
          Ready to Get Started?
        </h2>
        <p class="text-lg text-muted-foreground mb-8">
          Join thousands of companies already using Harper AI to accelerate their growth.
        </p>
        <Button href="#signup" size="lg">
          Start Your Free Trial
        </Button>
      </div>
    </div>
  </section>
</BaseLayout>