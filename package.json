{
  "name": "harper-ai-website-v3",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "build:prod": "npm run clean && npm run type-check && astro build && npm run healthcheck",
    "preview": "astro preview",
    "astro": "astro",
    "type-check": "astro check && tsc --noEmit",
    "clean": "rm -rf dist",
    "lint": "prettier --check .",
    "format": "prettier --write .",
    "build:script": "./scripts/build-production.sh",
    "healthcheck": "node ./scripts/healthcheck.js",
    "docker:build": "docker build -t harper-ai-website .",
    "docker:run": "docker run -p 8080:80 harper-ai-website",
    "docker:compose": "docker-compose up --build"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.3",
    "@astrojs/react": "^3.6.2",
    "@astrojs/sitemap": "^3.2.1",
    "@astrojs/tailwind": "^5.1.2",
    "@radix-ui/react-accordion": "^1.2.1",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-dropdown-menu": "^2.1.2",
    "@radix-ui/react-navigation-menu": "^1.2.1",
    "@radix-ui/react-popover": "^1.1.2",
    "@radix-ui/react-select": "^2.1.2",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-tabs": "^1.1.1",
    "@radix-ui/react-toast": "^1.2.2",
    "@radix-ui/react-tooltip": "^1.1.3",
    "@types/alpinejs": "^3.13.11",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "alpinejs": "^3.14.9",
    "astro": "^4.16.18",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.460.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^2.6.0",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.7.2"
  },
  "devDependencies": {
    "@types/node": "^20.17.11",
    "prettier": "^3.4.2",
    "prettier-plugin-astro": "^0.14.1"
  }
}
